<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.lab.zenminder"
    android:versionCode="1"
    android:versionName="1.0"
    >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        >

        <!-- Main Activity (has no children) -->
        <activity
            android:name="net.lab.zenminder.MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:launchMode="singleTop"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="net.lab.zenminder.SettingsActivity"
            android:label="@string/settings"
            android:icon="@drawable/ic_launcher"
            android:parentActivityName="net.lab.zenminder.MainActivity"
            >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.lab.zenminder.MainActivity"
                />

        </activity>

        <activity
            android:name="net.lab.zenminder.DonateActivity"
            android:label="@string/donate"
            android:icon="@drawable/ic_launcher"
            android:parentActivityName="net.lab.zenminder.MainActivity"
            >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.lab.zenminder.MainActivity"
                />

        </activity>

        <activity
            android:name="net.lab.zenminder.FeedbackActivity"
            android:label="@string/feedback"
            android:icon="@drawable/ic_launcher"
            android:parentActivityName="net.lab.zenminder.MainActivity"
            >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.lab.zenminder.MainActivity"
                />

        </activity>

    </application>
</manifest>
